<h1>Listing posts</h1>

<table>
  <tr>
    <th>Auteur</th>
    <th>Titre</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Certain de vouloir supprimer?', :method => :delete %></td>
  </tr>
<% end %>
</table>

